    <div class="main col-12">
        <!-- ------------------ Profile ------------------  -->
        <div class="col-3 inner-div profile-div">
            <div class="inner-profile-div">
                <div class="image-div">
                    <center>
                        <div class="img-content-div">
                            <div class="upload-container">
                                <label for="upload-btn" class="material-icons camera-icon" title="Change profile picture">
                                    camera_alt
                                </label>
                            </div>

                            <img src="https://res.cloudinary.com/dreyan/image/upload/v1538466628/ax-images/<%= docs.uType %>/<%= docs.basicInfo.profile %>" class="image">
                        </div>
                    </center>

                    <form class="upload-form" method="POST" enctype="multipart/form-data">
                        <input type="file" id="upload-btn">
                    </form>

                    <div class="details-div">
                        <div class="name">
                            <% if(docs.uType === 'doctor') { %>
                                Dr.
                            <% } %>
                           <%= docs.basicInfo.fname %> <%= docs.basicInfo.mname %> <%= docs.basicInfo.lname %>
                        </div>

                        <% if(docs.uType === 'doctor') { %>
                                <div class="specialty">
                                    
                                    <div class="specialty-content">
                                        <% 
                                            let objLen = Object.keys(docs.specialty).length
                                            let count = 0

                                            for(data in docs.specialty) {
                                                count++ 
                                        %>
                                                <% if(docs.specialty[data] !== 0) { %>
                                                    <%= 
                                                        docs.specialty[data].specialization
                                                    %>
                                                    <% if(objLen !== count) { %>
                                                        /
                                        <% 
                                                        }
                                                    }
                                                } 
                                        %> 
                                    </div>

                                    <div class="add-specialty-div">
                                        <button class="add-specialty-btn">
                                            <i class="material-icons add-icon">add</i>
                                            <span class="add-specialty-text">Add specialization</span>
                                        </button>
                                    </div>
                                </div>

                                <div class="since">
                                </div>
                        <% } %>
                        <div class="add-bio-div">

                            <!-- <button class="add-bio-btn">
                                <i class="material-icons add-icon">add</i>
                                <span class="add-bio-text">Add bio</span>
                            </button> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- ---------------- Center Div ------------------ -->
