    <div class="main col-12">
        <div class="col-3 inner-div profile-div">
            <div class="inner-profile-div">
                <div class="image-div">
                    <center>
                        <div class="img-content-div">
                            <img src="/static/images/profile-images/<%= img %>" class="image">
                        </div>
                    </center>
                    <div class="details-div">
                        <div class="name">
                            <% if(doctor === true) {%> Dr. <% } %>
